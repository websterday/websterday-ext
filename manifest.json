{
    "manifest_version": 2,

    "name": "Websterday",
    "description": "Do not forget any information anymore",
    "version": "0.1",
    "background": {
        "persistent":true,
        "page": "pages/background.html"
    },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs"
    ],
    "content_scripts": [{
        "js": ["js/app.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "browser_action": {
	   "default_icon": "ressources/icon.png",
	   "default_popup": "pages/index.html"
    }
}